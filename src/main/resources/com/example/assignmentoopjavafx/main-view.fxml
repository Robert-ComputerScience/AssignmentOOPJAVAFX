<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignmentoopjavafx.MainController">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" onAction="#handleFileNew"/>
                        <MenuItem mnemonicParsing="false" text="Save" onAction="#handleFileSave"/>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleFileExit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Copy" onAction="#handleEditCopy"/>
                        <MenuItem mnemonicParsing="false" text="Paste" onAction="#handleEditPaste"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Theme">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Light" onAction="#handleThemeLight"/>
                        <MenuItem mnemonicParsing="false" text="Dark" onAction="#handleThemeDark"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" onAction="#handleHelpAbout"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox fx:id="leftPanel" alignment="TOP_CENTER" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <ImageView fx:id="profileImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
            </ImageView>
        </VBox>
    </left>
    <center>
        <TableView fx:id="studentTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="100.0" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="100.0" text="Last Name" />
                <TableColumn fx:id="departmentColumn" prefWidth="100.0" text="Department" />
                <TableColumn fx:id="majorColumn" prefWidth="100.0" text="Major" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets left="10.0" right="10.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefWidth="250.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <TextField fx:id="firstNameTextField" promptText="First Name" />
            <TextField fx:id="lastNameTextField" promptText="Last Name" />
            <TextField fx:id="departmentTextField" promptText="Department" />
            <TextField fx:id="majorTextField" promptText="Major" />
            <TextField fx:id="emailTextField" promptText="Email" />
            <TextField fx:id="imageUrlTextField" promptText="ImageURL" />
            <Region VBox.vgrow="ALWAYS" /> <Button mnemonicParsing="false" onAction="#handleClear" prefWidth="200.0" text="Clear" />
            <Button mnemonicParsing="false" onAction="#handleAdd" prefWidth="200.0" text="Add" />
            <Button mnemonicParsing="false" onAction="#handleDelete" prefWidth="200.0" text="Delete" />
            <Button mnemonicParsing="false" onAction="#handleEdit" prefWidth="200.0" text="Edit" />
        </VBox>
    </right>
</BorderPane>